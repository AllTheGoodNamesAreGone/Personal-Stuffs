var h=30; 
var w=30;
function zoom(k){ 
var q=document.getElementById('tree').style;
q.left=215-w/2+'px';
q.top=215-h/2+'px';
q.height=h+'px';
q.width=w+'px';
 h+=10;w+=10;
}
